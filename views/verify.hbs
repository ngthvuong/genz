<!-- Sign Up Start -->
<div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
        <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
            <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                <form action="/auth/register" method="post">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <a href="#" class="">
                            <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>GENZ</h3>
                        </a>
                        <h3>Xác Thực Tài Khoản</h3>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="pin" id="pin">
                        <label for="pin">Mã xác thực</label>
                    </div>
                    <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Xác Thực</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Sign Up End -->

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.getElementById('registerForm').addEventListener('submit', function (event) {
            event.preventDefault();

            let registerFormError = document.getElementById('registerFormError')
            if (registerFormError) {
                registerFormError.remove()
            }

            const formData = new FormData(this)
            const data = JSON.stringify(Object.fromEntries(formData.entries()));

            fetch('/auth/register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: data
            })
                .then(response => {
                    return response.json()
                })
                .then(data => {
                    if (data.errors) {

                        let messages = ''
                        data.errors.forEach(error => {
                            messages += `<pre>${error.msg}</pre>`
                        })
                        registerFormError = document.createElement('div')
                        registerFormError.classList = 'col md-12 alert alert-warning mt-3'
                        registerFormError.id = "registerFormError"
                        registerFormError.innerHTML = messages
                        document.getElementById('registerForm').appendChild(registerFormError);

                    } else {
                        window.location.href = "/auth/complete"
                    }

                })
                .catch(error => {
                    console.error('Error:', error)
                    alert('Có lỗi sảy ra trong quá trình đăng ký.');

                })
        })
    })
</script>