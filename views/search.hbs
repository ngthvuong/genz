<div class="rows m-3">
    <h4>Kết quả "<span class="text-info">{{keyword}}</span>"</h4>
</div>

{{#if pagination.totalRows}}
<div class="row m-3">
    {{#each campaigns}}
    {{>campaignItem}}
    {{/each}}
</div>
<div class="row m-3">
    <nav aria-label="Page navigation" id="pagination">
        {{{createPagination pagination paginationClass="pagination justify-content-center"
        leftText="Previous" rightText="Next"}}}
    </nav>
</div>
{{else}}
<div class="row m-3">
    - Không có kết quả nào phù hợp!
</div>
{{/if}}